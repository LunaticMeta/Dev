<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Tab$PlaceholderFragment">


    <TextView android:id="@+id/section_label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView6"
                android:text="기록된 횟수"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/txt_DayTotal"
                android:text="14"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/txt_SleepEff"
                android:text="평균 수면 효율"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/textView9"
                android:text="1시간 26분"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp" />


            <TextView
                android:id="@+id/textView10"
                android:text="평균 수면 시간"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="175dp"/>

            <TextView
                android:id="@+id/txt_SleepAVG"
                android:text="5시간 24분"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="015dp"
                android:layout_below="@+id/textView10"
                android:layout_marginLeft="175dp"/>


            <TextView
                android:id="@+id/textView12"
                android:text="요일별 평균 수면 시간"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/SleepTimeWeekAVG_barGraph"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="270dp"
                android:layout_alignParentStart="true">

            </com.github.mikephil.charting.charts.BarChart>


            <TextView android:id="@+id/textView13"
                android:text="수면 요인\n(not yet)"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="600dp"/>

            <TextView android:id="@+id/textView14"
                android:text="나의 수면 비교\n(not yet)"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="700dp"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
